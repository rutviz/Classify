<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout1"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/my_appbar_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_100"
            app:elevation="0dp">

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/toolbar_top">
                <!--app:layout_scrollFlags="scroll|enterAlways">-->

                <ImageButton
                    android:id="@+id/menu_delete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_menu_white_24dp">
                </ImageButton>

                <ImageButton
                    android:id="@+id/close1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_close_white_24dp">
                </ImageButton>

                <TextView
                    android:id="@+id/count_selelcted1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="0"
                    android:textSize="25dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFF"
                    android:layout_toRightOf="@+id/close1"/>

                <TextView
                    android:id="@+id/trash_logo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FFF"
                    android:textSize="20dp"/>

                <ImageButton
                    android:id="@+id/check1"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:layout_toLeftOf="@+id/delete1"
                    android:src="@drawable/ic_check_box_white_24dp"/>

                <ImageButton
                    android:id="@+id/delete1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:layout_toLeftOf="@+id/restore1"
                    android:src="@drawable/ic_delete_sweep_white_24dp"/>

                <Button
                    android:id="@+id/restore1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:text="Restore"
                    android:textColor="#FFF"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <ImageView
            android:id="@+id/no_photos1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/niimage"
            android:layout_below="@+id/my_appbar_container1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler__auto_delete1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/my_appbar_container1"
            android:layout_above="@+id/delete_auto"
            android:orientation="vertical">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete_auto"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Delete"
                android:textColor="#FFF"
                android:id="@+id/delete_auto_category"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_delete_white_24dp"
                android:textAlignment="center"/>
        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_temp"
        app:menu="@menu/activity_temp_drawer"/>


</android.support.v4.widget.DrawerLayout>
