<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.classify.classify.AutoDelete_Recommendation"
    android:background="@drawable/toolbar_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toplayer2"
        android:background="@drawable/toolbar_top"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/category_title"
            android:layout_alignParentTop="true"
            android:text="Delete Recommendation"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_white_24dp"/>


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_recomnd"
        android:layout_below="@+id/toplayer2">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
