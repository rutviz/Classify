<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.classify.classify">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity2" />
        <activity android:name=".Photo_Viewer" />
        <activity
            android:name=".Splash_screen"
            android:label="Classify"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Image_classify" />
        <activity android:name=".RecycleBin" />
        <activity
            android:name=".Photo_Viewer_recycle"
            android:theme="@style/ImageViewer" />
        <activity
            android:name=".Image_view_Recycle"
            android:theme="@style/ImageViewer" />
        <activity android:name=".Image_Detail" />
        <activity android:name=".ImageInfo" />
        <activity android:name=".PermissionActivity" />
        <activity android:name=".AppSettings" />
        <activity android:name=".AutoDelete" />
        <activity android:name=".AutoDelete_category" />
        <activity android:name=".AutoDelete_Recommendation" />
        <activity android:name=".Documentation" />
        <activity android:name=".Document_view"></activity>
    </application>

</manifest>